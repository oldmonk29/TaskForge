# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:port/database_name"
PGHOST="hostname"
PGPORT="5432"
PGUSER="username"
PGPASSWORD="password"
PGDATABASE="database_name"

# Firebase Configuration (Required for Authentication)
VITE_FIREBASE_API_KEY="your_firebase_api_key_here"
VITE_FIREBASE_PROJECT_ID="your_firebase_project_id_here"
VITE_FIREBASE_APP_ID="your_firebase_app_id_here"

# Application Configuration
VITE_FREE_LAUNCH="true"
VITE_WELCOME_BONUS_PAISE="50000"
VITE_SHOW_ADS="true"

# Payment Configuration (Phase 2)
VITE_RAZORPAY_KEY_ID="rzp_test_your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_secret_key"

# Feature Flags
FREE_LAUNCH="true"
WELCOME_BONUS_PAISE="50000"
SHOW_ADS="true"

# Server Configuration
PORT="5000"
NODE_ENV="development"

# Security Configuration
JWT_SECRET="your_jwt_secret_key_here"
ENCRYPTION_KEY="your_encryption_key_here"

# Email Configuration (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"

# File Storage (Phase 2 - Certificates)
STORAGE_PROVIDER="local"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="cybersecure-academy-certificates"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Session Configuration
SESSION_SECRET="your_session_secret_here"
SESSION_TIMEOUT_MS="3600000"

# Development URLs (automatically set by Replit)
REPLIT_DOMAINS="your-repl-name.your-username.repl.co"

# Phase-specific Configuration
# Phase 1: Free OTT Skeleton - All content free
# Phase 2: Monetization - Enable paywall, certificates, Razorpay
# Phase 3: Android App - Add FCM configuration
# Phase 4: Growth Engine - Enable referrals, gamification
# Phase 5: Labs & Anti-piracy - Enable advanced features

